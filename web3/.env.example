# ==================================
# BLOCKCHAIN CONFIGURATION
# ==================================

# MegaETH Chain Configuration
MEGAETH_RPC_URL=https://rpc.megaeth.example.com
MEGAETH_CHAIN_ID=1234
MEGAETH_CHAIN_NAME=MegaETH Chain

# Private Key for Deployment (DO NOT COMMIT THIS!)
# Get this from MetaMask: Account Details > Export Private Key
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Block Explorer (optional)
BLOCK_EXPLORER_URL=https://explorer.megaeth.example.com
BLOCK_EXPLORER_API=https://api.explorer.megaeth.example.com/api
ETHERSCAN_API_KEY=your_api_key_if_needed

# ==================================
# DEPLOYED CONTRACT
# ==================================

# Will be updated after deployment
VITE_CONTRACT_ADDRESS=

# ==================================
# IPFS / PINATA CONFIGURATION
# ==================================

# Get these from https://pinata.cloud/
VITE_PINATA_API_KEY=your_pinata_api_key
VITE_PINATA_SECRET_KEY=your_pinata_secret_key
VITE_PINATA_JWT=your_pinata_jwt_token

# Pinata Gateway (or use public gateway)
VITE_PINATA_GATEWAY=https://gateway.pinata.cloud/ipfs/

# ==================================
# FRONTEND CONFIGURATION
# ==================================

# React App Environment
VITE_APP_NAME=VotingDAO
VITE_APP_DESCRIPTION=Decentralized Election Platform

# Network Configuration (must match blockchain config)
VITE_CHAIN_ID=1234
VITE_CHAIN_NAME=MegaETH Chain
VITE_RPC_URL=https://rpc.megaeth.example.com
VITE_NATIVE_CURRENCY_NAME=MegaETH
VITE_NATIVE_CURRENCY_SYMBOL=METH
VITE_NATIVE_CURRENCY_DECIMALS=18

# ==================================
# DEVELOPMENT
# ==================================

# Development Server Port
PORT=3000

# Enable/Disable Features
VITE_ENABLE_TESTNET=true
VITE_ENABLE_ANALYTICS=false
